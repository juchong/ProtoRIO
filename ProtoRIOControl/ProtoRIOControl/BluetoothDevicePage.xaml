<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProtoRIOControl.BluetoothDevicePage"
             xmlns:lang="clr-namespace:ProtoRIOControl.Localization;assembly=ProtoRIOControl"
             Padding="5">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Text="{lang:Translate TapToConnect}"
                   FontSize="Large"/>
            <ListView Grid.Row="1"
                      x:Name="devicesList"
                      ItemSelected="onDeviceSelected"/>
            <Button Grid.Row="2"
                    Text="{lang:Translate Cancel}"
                    Clicked="onCancelClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>